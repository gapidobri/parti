{
  "name": "Parti",
  "background": {
    "scripts": ["background/index.ts"],
    "persistent": true
  },
  "content_scripts": [
    {
      "js": ["content/index.ts"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "browser_action": {
    "default_popup": "popup/index.html"
  },
  "permissions": ["webRequest", "storage", "<all_urls>"]
}
